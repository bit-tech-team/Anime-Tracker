{
  "name": "AnimeTracker",
  "version": "1.0.4",
  "private": true,
  "main": "public/electron.js",
  "author": "Ridel Saavedra Flores",
  "description": "Anime Scene Search by Image",
  "homepage": "./",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^0.27.2",
    "classnames": "^2.3.1",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^5.0.5",
    "firebase": "^9.17.1",
    "i18next": "^22.4.9",
    "react": "17.0.2",
    "react-detect-offline": "^2.4.5",
    "react-dom": "17.0.2",
    "react-hook-form": "^7.33.1",
    "react-i18next": "^12.1.5",
    "react-loader-spinner": "^5.1.5",
    "react-player": "^2.10.1",
    "react-promise-tracker": "^2.1.0",
    "react-router-dom": "5.3.0",
    "react-scripts": "5.0.0",
    "react-toastify": "^9.0.5",
    "sass": "^1.53.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^2.1.3",
    "web-vitals": "^2.1.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack-build": "yarn build && electron-builder build --win -c.extraMetadata.main=build/electron.js --publish never",
    "electron-pack-deploy": "yarn build && electron-builder build --win -c.extraMetadata.main=build/electron.js --publish always",
    "preelectron-pack": "yarn build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@cypress/react": "^6.0.0",
    "@cypress/webpack-dev-server": "^2.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "concurrently": "^7.0.0",
    "cypress": "^10.3.1",
    "electron": "^18.3.7",
    "electron-builder": "^22.14.5",
    "wait-on": "^6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Bit-Tech-Team/Anime-Tracker.git"
  },
  "build": {
    "appId": "com.ridelsaavedraflores.animetracker",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "icon": "build/favicon.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "installerIcon": "build/favicon.ico"
    }
  }
}
